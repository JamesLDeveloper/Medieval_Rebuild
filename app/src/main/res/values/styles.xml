    <style name="ThemeOverlay.GreenButton" parent="">
        <item name="materialButtonStyle">@style/Button.Green</item>
    </style>

    <style name="ThemeOverlay.DarkRedButton" parent="">
        <item name="materialButtonStyle">@style/Button.DarkRed</item>
    </style>

