<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_main_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="39"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <ScrollView
            android:id="@+id/sv_main_previous_stage_user_text_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23">

            <TextView
                android:id="@+id/tv_main_previous_stage_user_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="14"
                android:text="Welcome to Medieval Marvels!"
                android:textSize="10sp"
                app:autoSizeTextType="none" />
        </ScrollView>


        <ScrollView
            android:id="@+id/sv_main_user_text_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="19">

            <TextView
                android:id="@+id/tv_main_user_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="19"
                android:textSize="12sp"
                app:autoSizeTextType="none" />

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_main_0"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Button"
                app:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/btn_main_1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Button"
                app:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/btn_main_2"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Button"
                app:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/btn_main_3"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Button"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_main_submit"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Button"
                app:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/btn_main_item"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Button"
                app:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/btn_main_exit"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Button"
                app:autoSizeTextType="uniform" />

        </LinearLayout>

        <!--        <com.google.android.material.textfield.TextInputLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:layout_weight="10">-->

        <!--            <EditText-->
        <!--                android:id="@+id/ett_main_user_text"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="match_parent"-->
        <!--                android:layout_weight="1"-->
        <!--                android:ems="10"-->
        <!--                android:hint="..."-->
        <!--                android:inputType="text" />-->
        <!--        </com.google.android.material.textfield.TextInputLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_main_character"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:text="Character Stats" />

            <Button
                android:id="@+id/btn_main_enemy"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="Enemy Stats" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>